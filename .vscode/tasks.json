{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open in Browser",
      "type": "shell",
      "command": "open",
      "args": ["index.html"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Local Server",
      "type": "shell",
      "command": "python3",
      "args": ["-m", "http.server", "8000"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "group": {
        "kind": "build"
      }
    }
  ]
}
